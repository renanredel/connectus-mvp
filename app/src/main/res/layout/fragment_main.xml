<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:id="@+id/mainFragment">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/realLayoutMainFragment"
        android:visibility="visible">

          <ImageView
            android:id="@+id/userPicture"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:paddingTop="8dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center_horizontal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="140dp">
                <TextView
                    android:id="@+id/userNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/username"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/userEmailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userNameTitle"
                    android:text="@string/useremail"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/parseBt"
                    android:text="parse teste"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_fragment_card1"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/main_fragment_image1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/main_fragment_text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HOLA"
                            android:gravity="left"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:textSize="14dp"
                            android:textColor="@color/blackTextColor"
                            android:fontFamily="sans-serif"/>

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:id="@+id/main_fragment_switch1"
                            android:checked="true"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_fragment_card2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/main_fragment_image2"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/main_fragment_text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HOLA"
                            android:gravity="left"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:textSize="17dp"
                            android:textColor="@color/blackTextColor"
                            android:fontFamily="sans-serif"/>

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:id="@+id/main_fragment_switch2"
                            android:checked="true"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_fragment_card3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/main_fragment_image3"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/main_fragment_text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HOLA"
                            android:gravity="left"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:textSize="17dp"
                            android:textColor="@color/blackTextColor"
                            android:fontFamily="sans-serif"/>

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:id="@+id/main_fragment_switch3"
                            android:checked="true"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_fragment_card4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/main_fragment_image4"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/main_fragment_text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HOLA"
                            android:gravity="left"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:textSize="17dp"
                            android:textColor="@color/blackTextColor"
                            android:fontFamily="sans-serif"/>

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="10dp"
                            android:id="@+id/main_fragment_switch4"
                            android:checked="true"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                 </LinearLayout>


        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/bottom_sheet"/>
        </android.support.design.widget.CoordinatorLayout>



    </RelativeLayout>




    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/shimmerLayoutMainFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                tools:ignore="ContentDescription"
                android:background="@color/shimmerColor"
                android:layout_gravity="center_horizontal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="140dp"
                android:gravity="center">
                <View
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:background="@color/shimmerColor"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="180dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/shimmerColor"
                    android:gravity="center" />

                <View
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:background="@color/shimmerColor"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@color/shimmerColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="15dp"
                            android:gravity="left"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:background="@color/shimmerColor"/>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@color/shimmerColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="15dp"
                            android:gravity="left"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:background="@color/shimmerColor"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@color/shimmerColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="15dp"
                            android:gravity="left"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:background="@color/shimmerColor"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@color/shimmerColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="15dp"
                            android:gravity="left"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:background="@color/shimmerColor"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>


</LinearLayout>


