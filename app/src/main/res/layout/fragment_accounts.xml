<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/accCard1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/accImg1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical|start"
                    android:src="@drawable/ic_launcher_background"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/accName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="NAME"
                        android:textColor="@color/blackTextColor"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/accProfile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/accName1"
                        android:layout_alignParentStart="true"
                        android:gravity="center_horizontal"
                        android:text="PROFILE"
                        android:textColor="@color/blackTextColor"
                        android:textSize="14dp"
                        android:fontFamily="sans-serif" />


                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/accCard2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@id/accCard1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/accImg2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical|start"
                    android:src="@drawable/ic_launcher_background"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/accProfile2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center_horizontal"
                        android:text="PROFILE 2"
                        android:textColor="@color/blackTextColor"
                        android:textSize="14dp"
                        android:fontFamily="sans-serif"/>


                 </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/accCard3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/accCard1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/accImg3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_launcher_background"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/accProfile3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center_horizontal"
                    android:text="PROFILE 3"
                    android:textColor="@color/blackTextColor"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif" />


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/accCard4"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/accCard1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/accImg4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_launcher_background"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/accProfile4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center_horizontal"
                    android:text="PROFILE 4"
                    android:textColor="@color/blackTextColor"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"/>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

        <Button
            android:id="@+id/addNewAccount"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="8dp"
            android:gravity="center"
            android:text="Nova Conta"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:background="@drawable/button"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"/>
</RelativeLayout>



</LinearLayout>
